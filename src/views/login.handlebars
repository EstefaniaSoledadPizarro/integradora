<div class="box">
    <h1>Login</h1>
    <hr>
    
    <form class="box" method="post" action="http://localhost:8080/api/sessions/login">
        <label for="email">Email</label>
        <input type="email" name="email" id="email">
        <label for="password">Password</label>
        <input type="password" name="password" id="password">
        <button class="button" type="submit">Login</button>
    </form>
    <br>
    <span><a href="http://localhost:8080/products/register" target="_self" class="button">Register</a></span>
</div>

{{#if failLogin}}
    <script type="text/javascript">
        alert('Login Failed!');
    </script>
{{/if}}